for (var i = 0; i < 5; i++ ) {
    setTimeout(function(a) {
      console.log(a);
    }, 100)
}

// 5 5 5 5 5
  
  for (var i = 0; i < 5; i++ ) {
    setTimeout(function(a) {
      console.log(a);
    }(i), 100)
  }
 
 // 0 1 2 3 4
 
 for ( let i = 0; i < 5; i++ ) {
    setTimeout(function() {
      console.log(i);
    }, 100)
  }
  
  // 0 1 2 3 4
